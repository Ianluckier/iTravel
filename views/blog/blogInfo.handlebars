<!-- Bar -->
<div class="container">
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/blog/">All Blogs</a></li>
        <li><a href="/blog/{{blog._id}}">{{blog.title}}</a></li>
    </ol>
</div>
<!-- //Bar -->
<!-- Main -->
<div class="about">
    <div class="about-heading">
        <div class="container">
            <h2 class="wow fadeInDown animated" data-wow-delay=".5s">{{blog.title}}</h2>
            {{!--<h3 class="wow fadeInUp animated" data-wow-delay=".5s">{{blog.createTime}}</h3>--}}
        </div>
    </div>
    <div class="about-top">
        <div class="container">
            <div class="about-bottom">
                {{#if blog.imagePath}}
                <img class="wow fadeInUp animated" data-wow-delay=".5s" src="../..{{blog.imagePath}}" alt="blog image" />
                {{/if}}
                <br>
                <br>
                <br>
				<p>{{{blog.content}}}</p>
                <ul class="wow fadeInUp animated" data-wow-delay=".5s">
					<li>createTime: {{{blog.createTime}}}</li>
					{{!--<li>conclusions: {{{blog.conclusions}}}</li>--}}
                </ul>
            </div>
        </div>
    </div>
    <br>
    <br>
    <!-- Comments -->
    <div class="response wow fadeInUp animated" data-wow-delay=".5s">
        <div class="container">
            <h3>Comments</h3>
            <div id="commentContainer" class="media response-info">
                {{#each blogComments}}
                    <div class="media-left response-text-left">
                        <img class="media-object" src="../../public/images/user.png" alt="Figure"
                             style="width:50px; height:50px;">
                        <h5>{{userId}}</h5>
                    </div>

                    <div class="media-body response-text-right">
                        <p class="well">{{content}}</p>
                        <ul>
                            <li>{{createTime}}</li>
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                {{/each}}
            </div>
        </div>
        <div class="opinion">
            <div class="container">
                <h2 class="wow fadeInUp animated" data-wow-delay=".5s">Leave Your Comment</h2>

                <div id="idHidden">
                    {{blog._id}}
                </div>

                <form id="comment-Form">
                <textarea id="comment" class="wow fadeInLeft animated" data-wow-delay=".5s" placeholder="Message"
                          required=""></textarea>
                    <input class="wow fadeInRight animated" data-wow-delay=".5s" type="submit" value="Submit">
                </form>

                <div class="alert alert-danger hidden" id="form-alert">
                </div>
            </div>
        </div>
    </div>
    <!-- //Comments -->
    <script src="../../public/js/blogcomment.js"></script>
</div>
<!-- // Main -->